<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:weightSum="1">

    <com.example.ritwik.musicapp.CircularImageView
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:id="@+id/fUser"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/fUser"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Track Name:"
            android:id="@+id/trackName"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/trackNameText"
            android:textColor="@color/BLACK"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/trackName"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Artist Name:"
            android:id="@+id/artistName"
            android:layout_below="@id/trackNameText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/BLACK"
            android:id="@+id/artistNameText"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/artistName"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genre:"
            android:layout_marginTop="12dp"
            android:id="@+id/genre"
            android:layout_below="@+id/artistNameText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/BLACK"
            android:id="@+id/genreText"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/genre"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Duration:"
            android:id="@+id/duration"
            android:layout_below="@+id/genreText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/BLACK"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/duration"
            android:id="@+id/durationText" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Price:"
            android:id="@+id/price"
            android:layout_below="@+id/durationText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/BLACK"
            android:id="@+id/priceText"
            android:layout_below="@+id/price"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Collection Price:"
            android:id="@+id/collectionPrice"
            android:layout_below="@+id/priceText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content"
            android:textColor="@color/BLACK"
            android:id="@+id/collectionPriceText"
            android:layout_below="@+id/collectionPrice"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country:"
            android:layout_marginTop="12dp"
            android:id="@+id/country"
            android:layout_below="@+id/collectionPriceText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/BLACK"
            android:layout_marginTop="2dp"
            android:id="@+id/countryText"
            android:layout_below="@+id/country"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Information About Artist:"
            android:layout_marginTop="12dp"
            android:id="@+id/inforMationArtist"
            android:layout_below="@+id/countryText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/accentcolor"
            android:layout_marginTop="2dp"
            android:id="@+id/inforMationArtistText"
            android:layout_below="@+id/inforMationArtist"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Information About Collection:"
            android:layout_marginTop="12dp"
            android:id="@+id/informationCollection"
            android:layout_below="@+id/inforMationArtistText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/accentcolor"
            android:layout_marginTop="2dp"
            android:id="@+id/informationCollectionText"
            android:layout_below="@+id/informationCollection"/>



    </RelativeLayout>
    </ScrollView>
</RelativeLayout>